<section>
  <div class="field">
  <h1>User Account Information</h1>
  <div class="displayinfo">Name: <%= @user.name %></div>
  <div class="displayinfo">Email: <%= mail_to(@user.email) %></div>
  <div class="displayinfo">User Name: <%= @user.username %></div>

  <% if current_user?(@user) %>
    <div class="actions">
      <%= link_to '<button type="button" class="button">Edit Account</button>'.html_safe, edit_user_path(@user) %>
      <%= link_to '<button type="button" class="button">Delete Account</button>'.html_safe, @user, method: :delete,
                  data: { confirm: "Permanently delete your account?" } %>
    </div>
  <% end %>
  </div>
</section>
