<%= form_with(model: user, local: true) do |f| %>
  <% if user.errors.any?  %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

    <% if current_user %>
      <h1>Edit Account</h1>
    <% else %>
      <h1>Sign Up</h1>
    <% end %>

    <%= f.label :name, class: "formLabel" %>
    <%= f.text_field :name, autofocus: true, class: "formField" %>

    <%= f.label :email, class: "formLabel"  %>
    <%= f.email_field :email, class: "formField" %>

    <%= f.label :username, class: "formLabel"  %>
    <%= f.text_field :username, placeholder: "Alphanumeric characters only", class: "formField" %>

    <%= f.label :password, class: "formLabel"  %>
    <%= f.password_field :password, class: "formField" %>

    <%= f.label :password_confirmation, "Confirm Password", class: "formLabel"  %>
    <%= f.password_field :password_confirmation, class: "formField" %>

    <div class="actions">
      <% if user.new_record? %>
        <%= f.submit "Create Account", :class => "cta_button" %>
      <% else %>
        <%= f.submit "Update Account", :class => "cta_button" %>
      <% end %>
      </div>
  </div>
<% end %>
