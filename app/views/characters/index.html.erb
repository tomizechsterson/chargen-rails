<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<div class="card-container">
  <% @characters.each do |character| %>
    <div class="card-body">
      <p class="card-image"><img src="https://picsum.photos/200"></p>
      <%= character.name %>
      <p class="card-info">more information in this tag</p>
      <%= link_to 'Show', character %>
      <%= link_to 'Edit', edit_character_path(character) %>
      <%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</div>
<br>

<%= link_to 'New Character', new_character_path %>
